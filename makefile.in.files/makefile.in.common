VES3D_TEMPLATES=-I${VES3D_DIR}/src
VES3D_INCLUDE=-I${VES3D_DIR}/include ${VES3D_TEMPLATES}
PREFLAGS= -openmp -fPIC -DNDEBUG -early-template-check

ifeq ($(USE_GPU),yes)
	VES3D_GPU_LIBS=-lves3dgpu
	PREFLAGS+= -DGPU_ACTIVE
else
	VES3D_GPU_LIBS=
endif

VES3D_LIBS= -L${VES3D_DIR}/lib -lves3d ${VES3D_GPU_LIBS}

